<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Warningspage">

    <TextureView
        android:id="@+id/camView"
        android:layout_width="408dp"
        android:layout_height="348dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/overspeed"
        android:layout_width="316dp"
        android:layout_height="58dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="120dp"
        android:text="OVERSPEEDING!!!"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/camView" />

    <TextView
        android:id="@+id/speedlimit"
        android:layout_width="313dp"
        android:layout_height="61dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/overspeed" />

    <TextView
        android:id="@+id/currentspeed"
        android:layout_width="313dp"
        android:layout_height="61dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/speedlimit" />

    <TextView
        android:id="@+id/drowsyView"
        android:layout_width="316dp"
        android:layout_height="58dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/camView" />
</androidx.constraintlayout.widget.ConstraintLayout>